{
  "database": {
    "rules": "./config/firebase/database.rules.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "database": {
      "port": 9000
    },
    "firestore": {
      "port": 8081
    },
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 6000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    }
  },
  "firestore": {
    "indexes": "./config/firebase/firestore.indexes.json",
    "rules": "./config/firebase/firestore.rules"
  },
  "functions": {
    "ignore": ["firebase.json", "**/node_modules/**", "**/.*"],
    "source": "dist/apps/firebase-functions"
  },
  "hosting": {
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "predeploy": "nx build csr --production",
    "public": "dist/apps/csr",
    "rewrites": [
      {
        "destination": "/index.html",
        "source": "**"
      }
    ]
  },
  "remoteconfig": {
    "template": "./config/firebase/remoteconfig.template.json"
  },
  "storage": {
    "rules": "./config/firebase/storage.rules"
  }
}
